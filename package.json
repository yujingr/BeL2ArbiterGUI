{
  "name": "arbiter-signer",
  "version": "1.0.0",
  "description": "Arbiter Signer Application",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --publish never",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "build": {
    "appId": "com.bel2labs.arbitersigner",
    "productName": "Arbiter Signer",
    "mac": {
      "target": "dmg",
      "icon": "build/icon.icns",
      "category": "your.app.category",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico",
      "target": [
        "nsis",
        "portable"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ],
      "icon": "build/icon.png"
    }
  },
  "author": "JING YU",
  "license": "ISC",
  "devDependencies": {
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1"
  }
}
